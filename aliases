# Unix
alias ..="cd .."
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"

alias clip='pbcopy'

# bat
if builtin command -v bat > /dev/null; then
  alias cat="bat"
fi

# sd
if builtin command -v sd > /dev/null; then
  alias sed="sd"
fi

# fd
if builtin command -v fd > /dev/null; then
  alias find="fd"
fi

# exa
if builtin command -v exa > /dev/null; then
  alias ls="exa --icons"
fi

# ripgrep
if builtin command -v rg > /dev/null; then
  alias grep="rg"
fi

# tig status
# brew install tig
if builtin command -v tig > /dev/null; then
  alias gs="tig status"
else
  alias gs='git status'
fi

# git
alias g='git'
alias gc='git commit'
alias gd='git diff'
alias gb='git branch'
alias ga='git add'
alias gf='git fetch --prune'

# github
if builtin command -v gh > /dev/null; then
  alias ghb='gh browse'
fi

# homebrew
alias brew="PATH=/usr/local/bin:/usr/bin:/bin:/usr/local/sbin:/usr/sbin:/sbin brew"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Include custom aliases
if [[ -f ~/.aliases.local ]]; then
  source ~/.aliases.local
fi
